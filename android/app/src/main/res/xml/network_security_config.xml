<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
    </domain-config>
    
    <!-- Allow HTTPS traffic to RunPod -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">runpod.net</domain>
        <domain includeSubdomains="true">proxy.runpod.net</domain>
        <domain includeSubdomains="true">g0r8vprssr0m80-11434.proxy.runpod.net</domain>
    </domain-config>
    
    <!-- Local development and production servers -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>
    
    <!-- Allow all HTTPS traffic by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
